<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.WillFragment"
    android:id="@+id/WillFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="338dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/WillDescrip1"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="false"
                    android:clickable="false"
                    android:insetRight="2dp"
                    android:text="Button"
                    app:rippleColor="#00FFFFFF" />

                <Button
                    android:id="@+id/WillBuy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:text="Button"
                    app:backgroundTint="@color/Redlol"
                    app:iconTint="#00FFFFFF"
                    app:rippleColor="#00FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/WillDescrip2"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="false"
                    android:clickable="false"
                    android:insetRight="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/WillBuy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:backgroundTint="@color/Redlol"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/WillDescrip3"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="false"
                    android:clickable="false"
                    android:insetRight="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/WillBuy3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:backgroundTint="@color/Redlol"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/WillDescrip4"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="false"
                    android:clickable="false"
                    android:insetRight="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/WillBuy4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:text="Button"
                    android:visibility="gone"
                    app:backgroundTint="@color/Redlol"
                    app:rippleColor="#00FFFFFF"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>